FROM node:lts-alpine

# Set working directory: our app directory inside container
WORKDIR /app

# Copy package.json and package-lock.json for the MCP server
COPY mcps/generate-image/package*.json ./mcps/generate-image/

# Copy tsconfig.json and source code for the MCP server
COPY mcps/generate-image/tsconfig.json ./mcps/generate-image/
COPY mcps/generate-image/src ./mcps/generate-image/src

# Change working directory to the MCP server folder
WORKDIR /app/mcps/generate-image

# Install dependencies without running lifecycle scripts
RUN npm install --ignore-scripts

# Build the TypeScript code
RUN npm run build

# Set the default command to run the server
CMD ["node", "dist/index.js"]
